<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="11dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="21dp"
    android:gravity="center_vertical"
    android:background="#FB8C00"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        android:background="#FB8C00"
        android:elevation="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#FFF"
            android:layout_below="@+id/cardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/searchMenteeProfilePicture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_image" />

                <TextView
                    android:id="@+id/searchMenteeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mentee fullname"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/searchMenteeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mentee Location"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/searchMenteeLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mentee Language"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/searchMenteeCollege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mentee College"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/searchMenteeCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mentee Course"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>




            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>