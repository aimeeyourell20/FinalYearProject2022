<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="11dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="21dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        android:elevation="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardview">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <ImageView
                android:id="@+id/searchMenteeProfilePicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/goals" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mentors Name"
                android:textAlignment="textStart"
                android:fontFamily="@font/boogaloo"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/goalMentorsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mentor Name"
                android:fontFamily="@font/boogaloo"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="21sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mentees Name"
                android:fontFamily="@font/boogaloo"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/goalMenteesName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mentees Name"
                android:fontFamily="@font/boogaloo"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="21sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Title"
                android:fontFamily="@font/boogaloo"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"/>

        <TextView
            android:id="@+id/goalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Work on communication"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="21sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Description"
                android:fontFamily="@font/boogaloo"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"/>


        <TextView
            android:id="@+id/goalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="By practising my presentation skills"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="21sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Start Date"
                android:fontFamily="@font/boogaloo"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/goalStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="Yesterday"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="21sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Due Date"
                android:textAlignment="textStart"
                android:fontFamily="@font/boogaloo"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"/>

        <TextView
            android:id="@+id/goalDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomorrow"
            android:fontFamily="@font/boogaloo"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="21sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Progress"
                android:textAlignment="textStart"
                android:fontFamily="@font/boogaloo"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/goalProgressSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only Started"
                android:textAlignment="textStart"
                android:fontFamily="@font/boogaloo"
                android:textColor="#000"
                android:textSize="21sp" />



    </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>