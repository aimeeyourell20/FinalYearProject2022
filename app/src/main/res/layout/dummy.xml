<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Person_Profile_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personprofile"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/profile_image"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/personname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fullname"
                android:drawableStart="@drawable/ic_profle"
                android:layout_below="@+id/personprofile"
                android:layout_marginTop="6dp"
                android:textSize="21sp"
                android:textStyle="bold"

                android:textAlignment="center"/>

            <TextView
                android:id="@+id/personemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:drawableStart="@drawable/ic_email"
                android:layout_below="@+id/personname"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/persontype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:drawableStart="@drawable/ic_type"
                android:layout_below="@+id/personemail"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/personlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:drawableStart="@drawable/ic_location"
                android:layout_below="@+id/persontype"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/personlanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Language"
                android:drawableStart="@drawable/ic_language"
                android:layout_below="@+id/personlocation"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/personskills1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills1"
                android:drawableStart="@drawable/ic_skills"
                android:layout_below="@+id/personlanguage"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/personskills2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills2"
                android:drawableStart="@drawable/ic_skills"
                android:layout_below="@+id/personskills1"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/personskills3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills3"
                android:drawableStart="@drawable/ic_skills"
                android:layout_below="@+id/personskills2"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/personjobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Title"
                android:drawableStart="@drawable/ic_title"
                android:layout_below="@+id/personskills3"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/personindustry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Industry"
                android:layout_below="@+id/personjobTitle"
                android:layout_marginTop="6dp"
                android:drawableStart="@drawable/ic_industry"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/personbio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:layout_below="@+id/personindustry"
                android:layout_marginTop="6dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/sendRequest"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personbio"
                android:layout_marginTop="100dp"
                android:text="Send Mentor Request"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/cancelRequest"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sendRequest"
                android:text="Cancel Mentor Request"
                android:gravity="center"
                android:background="@color/teal_200"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>

    </ScrollView>
</RelativeLayout>